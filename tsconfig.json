{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
"lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  
  // ðŸ’¡ THIS IS WHAT WAS MISSING: Tells TSC to look inside the 'src' folder.
  "include": ["src"], 
  
  // References the separate config for the Node/Vite environment.
  "references": [{ "path": "./tsconfig.node.json" }] 
}